<h1>Add a merit or demerit</h1>


<form method="post" action="<%= url_for :action => :new_delta_post %>">


  <input id="plus_radio" type="radio" value="plus" name="direction" checked="checked" />
  <label for="plus_radio">PLUS</label>
  
  <input id="minus_radio" type="radio" value="minus" name="direction" />
  <label for="minus_radio">MINUS</label>


  <br />

  <input type="text" size="5" name="points"/>
  POINTS

  <span id="to_or_from">fuck </span>

  <br />

  <select name="house">
    <option value="" selected="selected"> </option>
  <% for house in @houses %>
    <option value="<%= house.name %>"><%= house.name.capitalize %></option>
  <% end %>
  </select> 

  <br />

  BECAUSE

  <br />

  <input type="text" name="why" />

  <br />
  

  <input type="submit" />

</form>




<script>
  function changeToOrFromText() {
    if($('plus_radio').checked) {
      $('to_or_from').set('text', 'TO');
    }
    else {
      $('to_or_from').set('text', 'FROM');
    }
  }

  window.addEvent('load', function() {
    changeToOrFromText();

    $('minus_radio').addEvent('change', function() {
      changeToOrFromText();
    });

    $('plus_radio').addEvent('change', function() {
      changeToOrFromText();
    });
  });
</script>
