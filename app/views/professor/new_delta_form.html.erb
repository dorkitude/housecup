<h1>Add a merit or demerit</h1>


<form method="post" action="<%= url_for :action => :new_delta_post %>">


  <input type="radio" name="direction" id="plus" checked="checked" />
  <label for="plus">PLUS</label>
  
  <input type="radio" name="direction" id="minus" />
  <label for="minus">MINUS</label>


  <br />

  <input type="text" size="5" name="points"/>
  POINTS
  <span id="to_or_from">
  TO
  </span>

  <br />

  <select name="house">
    <option value="" selected="selected"> </option>
  <% for house in @houses %>
    <option value="<%= house.name %>"><%= house.name.capitalize %></option>
  <% end %>
  </select> 

  <br />

  <input type="text" name="why" />

  <br />

  BECAUSE

  <br />
  

  <input type="submit" />


</form>
